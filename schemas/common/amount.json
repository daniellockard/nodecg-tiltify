{
    "$schema": "https://json-schema.org/draft-04/schema",
    "type": "object",
    "properties": {
        "currency": {
            "type": "string",
            "pattern": "[A-Z]{3}"
        },
        "value": {
            "type": "string",
            "pattern": "[0-9]+(\\.[0-9]+)?"
        }
    },
    "required": [
        "currency",
        "value"
    ]
}